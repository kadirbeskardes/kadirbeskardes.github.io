@page "/"
@using Personal.Models
@using Personal.Services
@inject ProjectService ProjectService

<!-- Hero Section -->
<section class="hero-section bg-gradient-primary text-white py-5">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6 order-lg-1 order-2">
                <h1 class="display-3 fw-bold mb-4 animate__animated animate__fadeInDown">Merhaba, Ben <span class="text-highlight">Kadir Beşkardeş</span></h1>
                <p class="lead mb-4 text-light animate__animated animate__fadeIn animate__delay-1s">Yazılım Geliştirici & Full Stack Developer</p>
                <p class="mb-4 fs-5 text-light animate__animated animate__fadeIn animate__delay-1s">
                    Web ve mobil uygulama geliştirme konusunda uzmanlaşmış bir yazılım geliştiriciyim.
                    Kullanıcı dostu, modern ve performanslı uygulamalar geliştiriyorum.
                </p>
                <div class="d-flex gap-3 animate__animated animate__fadeIn animate__delay-2s">
                    <a href="about" class="btn btn-light btn-lg px-4 rounded-pill">
                        <i class="bi bi-person me-2"></i>Hakkımda
                    </a>
                    <a href="contact" class="btn btn-outline-light btn-lg px-4 rounded-pill">
                        <i class="bi bi-envelope me-2"></i>İletişim
                    </a>
                </div>
            </div>
            <div class="col-lg-6 order-lg-2 order-1 mb-4 mb-lg-0 text-center animate__animated animate__fadeIn">
                <div class="profile-image-container mx-auto">
                    <img src="img/pp.jpg" alt="Kadir Beşkardeş" class="img-fluid rounded-circle shadow-lg border border-4 border-white" style="max-width: 300px;">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Skills Section -->
<section class="py-5 bg-white">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="section-title fw-bold position-relative d-inline-block">Yeteneklerim</h2>
            <p class="text-muted fs-5">Geliştirme süreçlerinde kullandığım teknolojiler</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-effect">
                    <div class="card-body text-center p-4">
                        <div class="icon-container bg-primary-light mb-4 mx-auto">
                            <i class="bi bi-code-slash text-primary fs-1"></i>
                        </div>
                        <h3 class="h4 mb-3 fw-bold">Frontend</h3>
                        <ul class="list-unstyled skill-list">
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i>Blazor WebAssembly</li>
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i>HTML5/CSS3</li>
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i>JavaScript</li>
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i>Bootstrap 5</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-effect">
                    <div class="card-body text-center p-4">
                        <div class="icon-container bg-primary-light mb-4 mx-auto">
                            <i class="bi bi-server text-primary fs-1"></i>
                        </div>
                        <h3 class="h4 mb-3 fw-bold">Backend</h3>
                        <ul class="list-unstyled skill-list">
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i>.NET</li>
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i>Python</li>
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i>Entity Framework</li>
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i>REST API</li>
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i>SQL Server</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-effect">
                    <div class="card-body text-center p-4">
                        <div class="icon-container bg-primary-light mb-4 mx-auto">
                            <i class="bi bi-tools text-primary fs-1"></i>
                        </div>
                        <h3 class="h4 mb-3 fw-bold">Araçlar</h3>
                        <ul class="list-unstyled skill-list">
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i>Visual Studio</li>
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i>Git/GitHub</li>
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i>Docker</li>
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i>Postman</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Projects Section -->
<section class="py-5 bg-light">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="section-title fw-bold position-relative d-inline-block">Son Projelerim</h2>
            <p class="text-muted fs-5">Yakın zamanda tamamladığım çalışmalar</p>
        </div>

        @if (featuredProjects == null)
        {
            <div class="text-center py-5">
                <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var project in featuredProjects)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 border-0 shadow-sm overflow-hidden hover-effect">
                            <div class="project-image-container">
                                <img src="@project.ImageUrl" class="card-img-top" alt="@project.Title">
                                <div class="overlay"></div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title fw-bold">@project.Title</h5>
                                <p class="card-text text-muted">@project.ShortDescription</p>
                                <div class="mb-3">
                                    @foreach (var tech in project.Technologies.Take(3))
                                    {
                                        <span class="badge bg-primary-light text-primary me-1">@tech</span>
                                    }
                                </div>
                            </div>
                            <div class="card-footer bg-transparent border-0 pt-0 d-flex justify-content-between">
                                <a href="@($"project/{project.Id}")" class="btn btn-sm btn-primary rounded-pill">
                                    Detayları Gör <i class="bi bi-arrow-right ms-2"></i>
                                </a>
                                @if (!string.IsNullOrWhiteSpace(project.GitHubUrl))
                                {
                                    <a href="@project.GitHubUrl" target="_blank" class="btn btn-sm btn-outline-dark rounded-pill">
                                        <i class="bi bi-github me-1"></i> GitHub
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-5">
                <a href="projects" class="btn btn-primary btn-lg px-4 rounded-pill">
                    <i class="bi bi-collection me-2"></i>Tüm Projeleri Görüntüle
                </a>
            </div>
        }
    </div>
</section>

@code {
    private List<Personal.Models.ProjectDetail>? featuredProjects;

    protected override async Task OnInitializedAsync()
    {
        var allProjects = await ProjectService.GetProjectListingsAsync();
        featuredProjects = allProjects.OrderByDescending(p => p.CreatedDate).Take(3).ToList();
    }
}

<style>
    /* Özel Stiller */
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .text-highlight {
        color: #fff;
        position: relative;
        display: inline-block;
    }

        .text-highlight:after {
            content: '';
            position: absolute;
            bottom: 5px;
            left: 0;
            width: 100%;
            height: 10px;
            background-color: rgba(255, 255, 255, 0.3);
            z-index: -1;
            border-radius: 3px;
        }

    .section-title {
        position: relative;
        padding-bottom: 10px;
    }

        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            border-radius: 3px;
        }

    .icon-container {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(102, 126, 234, 0.1);
    }

    .skill-list li {
        padding: 8px 0;
        border-bottom: 1px solid #eee;
    }

        .skill-list li:last-child {
            border-bottom: none;
        }

    .hover-effect {
        transition: all 0.3s ease;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
        }

    .project-image-container {
        position: relative;
        overflow: hidden;
        height: 200px;
    }

        .project-image-container img {
            object-fit: cover;
            width: 100%;
            height: 100%;
            transition: transform 0.5s ease;
        }

        .project-image-container .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(102, 126, 234, 0.2);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

    .hover-effect:hover .project-image-container img {
        transform: scale(1.05);
    }

    .hover-effect:hover .project-image-container .overlay {
        opacity: 1;
    }

    .bg-primary-light {
        background-color: rgba(102, 126, 234, 0.1);
    }

    .profile-image-container {
        position: relative;
    }

        .profile-image-container:before {
            content: '';
            position: absolute;
            width: 110%;
            height: 110%;
            top: -5%;
            left: -5%;
            border-radius: 50%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            animation: rotate 8s linear infinite;
            z-index: -1;
        }

    @@keyframes rotate {
        100% {
            transform: rotate(360deg);
        }
    }
</style>