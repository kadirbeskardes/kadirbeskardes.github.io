                <a href="projects" class="btn btn-enhanced btn-lg px-4 rounded-pill shadow-sm animate-in all-projects-btn" style="background: var(--accent-color); color: white; position: relative; overflow: hidden;">
                    <i class="bi bi-collection me-2"></i>@Localization["Home_AllProjects"]
