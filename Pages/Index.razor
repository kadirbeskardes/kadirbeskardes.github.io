<!-- Projects Section -->
<section class="py-5 projects-section" style="background: var(--bg-primary);">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="section-title fw-bold position-relative d-inline-block">@Localization["Home_RecentProjects"]</h2>
            <p class="text-muted fs-5 section-subtitle">@Localization["Home_RecentProjectsSubtitle"]</p>
        </div>

        @if (recentFeaturedProjects == null)
        {
            <div class="text-center py-5">
                <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else
        {
            <div class="row g-4 projects-row">
                @foreach (var project in recentFeaturedProjects)
                {
                    <div class="col-lg-4 col-md-6 col-12">
                        <div class="project-card-modern h-100">
                            <div class="card-modern-image-wrapper">
                                <img src="@project.ImageUrl" alt="@project.Title" class="card-modern-image">
                                <div class="card-modern-overlay">
                                    <a href="@($"project/{project.Id}")" class="btn-view-project">
                                        <span>@Localization["Home_ViewProject"]</span>
                                        <i class="bi bi-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="modern-card-body">
                                <div class="modern-card-content">
                                    <h5 class="modern-card-title">@project.Title</h5>
                                    <p class="modern-card-description">@project.ShortDescription</p>
                                </div>
                                <div class="modern-card-footer">
                                    <div class="modern-tech-tags">
                                        @foreach (var tech in project.Technologies.Take(3))
                                        {
                                            <span class="modern-tech-tag">@tech</span>
                                        }
                                        @if (project.Technologies.Length > 3)
                                        {
                                            <span class="modern-tech-tag more">+@(project.Technologies.Length - 3)</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-5">
                <a href="projects" class="btn btn-primary btn-lg px-4 rounded-pill shadow-sm animate-in all-projects-btn">
                    <i class="bi bi-collection me-2"></i>@Localization["Home_AllProjects"]
                </a>
            </div>
        }
    </div>
</section>

@code {
    private List<Personal.Models.ProjectDetail>? recentFeaturedProjects;
    private string displayedJobTitle = "";
    private string[] jobTitles = Array.Empty<string>();
    private int currentTitleIndex = 0;
    private bool isDeleting = false;
    private bool disposed = false;

    protected override async Task OnInitializedAsync()
    {
        jobTitles = new[] { 
            Localization["Home_JobTitle_1"], 
            Localization["Home_JobTitle_2"], 
            Localization["Home_JobTitle_3"], 
            Localization["Home_JobTitle_4"] 
        };

        var allProjects = await ProjectService.GetProjectListingsAsync();
        recentFeaturedProjects = allProjects.OrderByDescending(project => project.CreatedDate).Take(3).ToList();
        
        // Start Typewriter effect
        _ = TypeWriterLoop();
    }

    private async Task TypeWriterLoop()
    {
        while (!disposed)
        {
            var currentTitle = jobTitles[currentTitleIndex];
            
            if (isDeleting)
            {
                if (displayedJobTitle.Length > 0)
                {
                    displayedJobTitle = displayedJobTitle.Substring(0, displayedJobTitle.Length - 1);
                    StateHasChanged();
                    await Task.Delay(50);
                }
                else
                {
                    isDeleting = false;
                    currentTitleIndex = (currentTitleIndex + 1) % jobTitles.Length;
                    await Task.Delay(500);
                }
            }
            else
            {
                if (displayedJobTitle.Length < currentTitle.Length)
                {
                    displayedJobTitle = currentTitle.Substring(0, displayedJobTitle.Length + 1);
                    StateHasChanged();
                    await Task.Delay(100);
                }
                else
                {
                    isDeleting = true;
                    await Task.Delay(2000);
                }
            }
        }
    }

    public void Dispose()
    {
        disposed = true;
    }
}

