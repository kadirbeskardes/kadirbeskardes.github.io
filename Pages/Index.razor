@code {
    private List<Personal.Models.ProjectDetail>? recentFeaturedProjects;
    private string displayedJobTitle = "";
    private string[] jobTitles = Array.Empty<string>();
    private int currentTitleIndex = 0;
    private bool isDeleting = false;
    private bool disposed = false;

    protected override async Task OnInitializedAsync()
    {
        jobTitles = new[] { 
            Localization["Home_JobTitle_1"], 
            Localization["Home_JobTitle_2"], 
            Localization["Home_JobTitle_3"], 
            Localization["Home_JobTitle_4"] 
        };

        var allProjects = await ProjectService.GetProjectListingsAsync();
        recentFeaturedProjects = allProjects.OrderByDescending(project => project.CreatedDate).Take(3).ToList();
        
        // Start Typewriter effect
        _ = TypeWriterLoop();
    }

    private async Task TypeWriterLoop()
    {
        while (!disposed)
        {
            var currentTitle = jobTitles[currentTitleIndex];
            
            if (isDeleting)
            {
                if (displayedJobTitle.Length > 0)
                {
                    displayedJobTitle = displayedJobTitle.Substring(0, displayedJobTitle.Length - 1);
                    StateHasChanged();
                    await Task.Delay(50);
                }
                else
                {
                    isDeleting = false;
                    currentTitleIndex = (currentTitleIndex + 1) % jobTitles.Length;
                    await Task.Delay(500);
                }
            }
            else
            {
                if (displayedJobTitle.Length < currentTitle.Length)
                {
                    displayedJobTitle = currentTitle.Substring(0, displayedJobTitle.Length + 1);
                    StateHasChanged();
                    await Task.Delay(100);
                }
                else
                {
                    isDeleting = true;
                    await Task.Delay(2000);
                }
            }
        }
    }

    public void Dispose()
    {
        disposed = true;
    }
}

