@page "/project/{id:int}"
@using Personal.Models
@using Personal.Services
@inject ProjectService ProjectService
@inject NavigationManager NavigationManager
@inject LocalizationService Localization

<PageTitle>@(projectDetail?.Title ?? Localization["ProjectDetail_Title_Default"])</PageTitle>

@if (projectDetail == null)
{
    <div class="project-loading-wrapper">
        @if (isLoadingProject)
        {
            <div class="loading-container">
                <div class="loading-spinner-large">
                    <div class="spinner-orbit"></div>
                    <div class="spinner-orbit"></div>
                    <div class="spinner-orbit"></div>
                    <div class="spinner-core">
                        <i class="bi bi-code-slash"></i>
                    </div>
                </div>
                <p class="loading-text">@Localization["ProjectDetail_Loading"]</p>
            </div>
        }
        else
        {
            <div class="error-container">
                <div class="error-icon-wrapper">
                    <div class="error-icon-bg"></div>
                    <i class="bi bi-exclamation-triangle error-icon"></i>
                </div>
                <h2 class="error-title">@Localization["ProjectDetail_NotFound_Title"]</h2>
                <p class="error-message">@Localization["ProjectDetail_NotFound_Message"]</p>
                <button class="back-button" @onclick="NavigateToProjectsPage">
                    <i class="bi bi-arrow-left me-2"></i>@Localization["ProjectDetail_BackToProjects"]
                </button>
            </div>
        }
    </div>
}
else
{
    <div class="project-detail-wrapper">
        <!-- Hero Section -->
        <section class="project-hero-section">
            <div class="hero-background">
                <div class="hero-image-container">
                    <img src="@projectDetail.ImageUrl" alt="@projectDetail.Title" class="hero-bg-image">
                    <div class="hero-overlay"></div>
                </div>
                <div class="hero-particles">
                    @for (int i = 0; i < 20; i++)
                    {
                        <div class="particle-dot" style="--delay: @(i * 0.2)s; --duration: @(Random.Shared.Next(4, 8))s; --x: @(Random.Shared.Next(0, 100))%; --y: @(Random.Shared.Next(0, 100))%;"></div>
                    }
                </div>
            </div>

            <div class="container position-relative" style="z-index: 10;">
                <!-- Breadcrumb -->
                <nav class="breadcrumb-nav animate-fade-down">
                    <a href="/" class="breadcrumb-link">
                        <i class="bi bi-house-door"></i>
                        <span>@Localization["ProjectDetail_Breadcrumb_Home"]</span>
                    </a>
                    <i class="bi bi-chevron-right breadcrumb-separator"></i>
                    <a href="/projects" class="breadcrumb-link">
                        <i class="bi bi-folder2-open"></i>
                        <span>@Localization["ProjectDetail_Breadcrumb_Projects"]</span>
                    </a>
                    <i class="bi bi-chevron-right breadcrumb-separator"></i>
                    <span class="breadcrumb-current">@projectDetail.Title</span>
                </nav>

                <div class="hero-content">
                    <div class="row align-items-center g-5">
                        <div class="col-lg-7 animate-fade-right">
                            <!-- Category & Date -->
                            <div class="hero-meta">
                                @if (!string.IsNullOrEmpty(projectDetail.Category))
                                {
                                    <span class="meta-tag category">
                                        <i class="bi bi-tag-fill"></i>
                                        @projectDetail.Category
                                    </span>
                                }
                                <span class="meta-tag date">
                                    <i class="bi bi-calendar-event"></i>
                                    @projectDetail.CreatedDate.ToString("MMMM yyyy")
                                </span>
                                <span class="meta-tag status @(string.IsNullOrEmpty(projectDetail.ProjectUrl) ? "dev" : "live")">
                                    <i class="bi @(string.IsNullOrEmpty(projectDetail.ProjectUrl) ? "bi-tools" : "bi-broadcast")"></i>
                                    @(string.IsNullOrEmpty(projectDetail.ProjectUrl) ? Localization["ProjectDetail_Status_Development"] : Localization["ProjectDetail_Status_Live"])
                                </span>
                            </div>

                            <!-- Title -->
                            <h1 class="hero-title">@projectDetail.Title</h1>

                            <!-- Description -->
                            <p class="hero-description">@projectDetail.ShortDescription</p>

                            <!-- Action Buttons -->
                            <div class="hero-actions">
                                @if (!string.IsNullOrEmpty(projectDetail.ProjectUrl))
                                {
                                    <a href="@projectDetail.ProjectUrl" target="_blank" class="action-btn primary pulse-btn">
                                        <i class="bi bi-rocket-takeoff"></i>
                                        <span>@Localization["ProjectDetail_Button_LiveDemo"]</span>
                                    </a>
                                }
                                @if (!string.IsNullOrEmpty(projectDetail.GitHubUrl))
                                {
                                    <a href="@projectDetail.GitHubUrl" target="_blank" class="action-btn secondary">
                                        <i class="bi bi-github"></i>
                                        <span>@Localization["ProjectDetail_Button_GitHubRepo"]</span>
                                    </a>
                                }
                            </div>
                        </div>

                        <div class="col-lg-5 d-none d-lg-block animate-fade-left">
                            <!-- Project Preview Card (Browser Look) -->
                            <div class="project-preview-card">
                                <div class="preview-header">
                                    <div class="preview-dots">
                                        <span></span><span></span><span></span>
                                    </div>
                                    <div class="preview-address-bar">
                                        <div class="preview-lock"><i class="bi bi-lock-fill"></i></div>
                                        <div class="preview-url">@GetDisplayUrl(projectDetail.ProjectUrl)</div>
                                    </div>
                                </div>
                                <div class="preview-body">
                                    <img src="@projectDetail.ImageUrl" alt="@projectDetail.Title Preview" class="preview-image">
                                    <div class="preview-overlay">
                                        <i class="bi bi-arrows-fullscreen"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Wave Separator -->
            <div class="hero-wave">
                <svg viewBox="0 0 1440 120" preserveAspectRatio="none">
                    <path d="M0,64L60,58.7C120,53,240,43,360,48C480,53,600,75,720,80C840,85,960,75,1080,64C1200,53,1320,43,1380,37.3L1440,32L1440,120L1380,120C1320,120,1200,120,1080,120C960,120,840,120,720,120C600,120,480,120,360,120C240,120,120,120,60,120L0,120Z"></path>
                </svg>
            </div>
        </section>

        <!-- Main Content -->
        <section class="project-content-section">
            <div class="container">
                <div class="row g-4">
                    <!-- Main Content Column -->
                    <div class="col-lg-8 animate-fade-up">
                        <!-- Project Description -->
                        <article class="content-card">
                            <div class="card-header-custom">
                                <div class="header-icon">
                                    <i class="bi bi-file-text-fill"></i>
                                </div>
                                <h2 class="header-title">@Localization["ProjectDetail_Section_Details"]</h2>
                            </div>
                            <div class="card-body-custom">
                                <div class="markdown-content">
                                    <markdown>@projectDetail.FullDescription</markdown>
                                </div>
                            </div>
                        </article>

                        <!-- Features Section -->
                        @if (projectDetail.Features?.Any() == true)
                        {
                            <article class="content-card">
                                <div class="card-header-custom">
                                    <div class="header-icon features">
                                        <i class="bi bi-stars"></i>
                                    </div>
                                    <h2 class="header-title">@Localization["ProjectDetail_Section_Features"]</h2>
                                </div>
                                <div class="card-body-custom">
                                    <div class="features-grid">
                                        @foreach (var feature in projectDetail.Features)
                                        {
                                            <div class="feature-card">
                                                <div class="feature-icon">
                                                    <i class="bi bi-check-lg"></i>
                                                </div>
                                                <span class="feature-text">@feature</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </article>
                        }

                        <!-- Challenges & Solutions -->
                        @if (!string.IsNullOrEmpty(projectDetail.Challenges) || !string.IsNullOrEmpty(projectDetail.Solutions))
                        {
                            <article class="content-card">
                                <div class="card-header-custom">
                                    <div class="header-icon challenges">
                                        <i class="bi bi-puzzle-fill"></i>
                                    </div>
                                    <h2 class="header-title">@Localization["ProjectDetail_Section_ChallengesSolutions"]</h2>
                                </div>
                                <div class="card-body-custom">
                                    @if (!string.IsNullOrEmpty(projectDetail.Challenges))
                                    {
                                        <div class="challenge-block">
                                            <div class="block-header challenges">
                                                <i class="bi bi-exclamation-triangle-fill"></i>
                                                <h3>@Localization["ProjectDetail_Section_Challenges"]</h3>
                                            </div>
                                            <div class="block-content">
                                                <markdown>@projectDetail.Challenges</markdown>
                                            </div>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(projectDetail.Solutions))
                                    {
                                        <div class="solution-block">
                                            <div class="block-header solutions">
                                                <i class="bi bi-lightbulb-fill"></i>
                                                <h3>@Localization["ProjectDetail_Section_Solutions"]</h3>
                                            </div>
                                            <div class="block-content">
                                                <markdown>@projectDetail.Solutions</markdown>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </article>
                        }
                    </div>

                    <!-- Sidebar -->
                    <div class="col-lg-4 animate-fade-up" style="animation-delay: 0.2s;">
                        <!-- Technology Stack -->
                        <aside class="sidebar-card">
                            <div class="sidebar-header">
                                <div class="header-icon tech">
                                    <i class="bi bi-code-square"></i>
                                </div>
                                <h3>@Localization["ProjectDetail_Section_TechStack"]</h3>
                            </div>
                            <div class="sidebar-body">
                                <div class="tech-list">
                                    @foreach (var tech in projectDetail.Technologies)
                                    {
                                        <div class="tech-pill">
                                            <span class="tech-name">@tech</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </aside>

                        <!-- Screenshots Gallery -->
                        @if (projectDetail.Screenshots?.Any() == true)
                        {
                            <aside class="sidebar-card">
                                <div class="sidebar-header">
                                    <div class="header-icon gallery">
                                        <i class="bi bi-images"></i>
                                    </div>
                                    <h3>@Localization["ProjectDetail_Section_Screenshots"]</h3>
                                </div>
                                <div class="sidebar-body">
                                    <div class="gallery-grid">
                                        @foreach (var screenshot in projectDetail.Screenshots)
                                        {
                                            <div class="gallery-item" @onclick="() => OpenScreenshotLightbox(screenshot)">
                                                <img src="@screenshot" alt="Screenshot" loading="lazy">
                                                <div class="gallery-overlay">
                                                    <i class="bi bi-zoom-in"></i>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </aside>
                        }

                        <!-- Project Info -->
                        <aside class="sidebar-card">
                            <div class="sidebar-header">
                                <div class="header-icon info">
                                    <i class="bi bi-info-circle-fill"></i>
                                </div>
                                <h3>@Localization["ProjectDetail_Section_Info"]</h3>
                            </div>
                            <div class="sidebar-body">
                                <div class="info-list">
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <i class="bi bi-calendar-check"></i>
                                        </div>
                                        <div class="info-content">
                                            <span class="info-label">@Localization["ProjectDetail_Info_CreatedDate"]</span>
                                            <span class="info-value">@projectDetail.CreatedDate.ToString("dd MMMM yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <i class="bi bi-tags"></i>
                                        </div>
                                        <div class="info-content">
                                            <span class="info-label">@Localization["ProjectDetail_Info_Category"]</span>
                                            <span class="info-value">@projectDetail.Category</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </aside>

                        <!-- Back to Projects -->
                        <div class="back-to-projects">
                            <a href="/projects" class="back-link">
                                <i class="bi bi-arrow-left"></i>
                                <span>@Localization["ProjectDetail_BackToProjects"]</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Lightbox Modal -->
    @if (isLightboxOpen)
    {
        <div class="lightbox-modal" @onclick="CloseScreenshotLightbox">
            <div class="lightbox-content animate-zoom-in" @onclick:stopPropagation>
                <button class="lightbox-close" @onclick="CloseScreenshotLightbox">
                    <i class="bi bi-x-lg"></i>
                </button>
                <div class="lightbox-image-container">
                    <img src="@selectedScreenshotUrl" alt="Screenshot" class="lightbox-image">
                </div>
                <div class="lightbox-controls">
                    <button class="lightbox-nav prev" @onclick="ShowPreviousScreenshot" disabled="@(selectedScreenshotIndex <= 0)">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <span class="lightbox-counter">@(selectedScreenshotIndex + 1) / @projectDetail.Screenshots.Length</span>
                    <button class="lightbox-nav next" @onclick="ShowNextScreenshot" disabled="@(selectedScreenshotIndex >= projectDetail.Screenshots.Length - 1)">
                        <i class="bi bi-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    }
}

@code {
    [Parameter] public int Id { get; set; }

    private Personal.Models.ProjectDetail? projectDetail;
    private bool isLoadingProject = true;
    private bool isLightboxOpen = false;
    private string? selectedScreenshotUrl;
    private int selectedScreenshotIndex = 0;

    protected override async Task OnParametersSetAsync()
    {
        isLoadingProject = true;
        // Simulating a small delay for the animation to be appreciated
        await Task.Delay(300);
        projectDetail = await ProjectService.GetProjectDetailAsync(Id);
        isLoadingProject = false;
    }

    private void NavigateToProjectsPage()
    {
        NavigationManager.NavigateTo("/projects");
    }

    private void OpenScreenshotLightbox(string screenshotUrl)
    {
        if (projectDetail?.Screenshots == null) return;

        selectedScreenshotUrl = screenshotUrl;
        selectedScreenshotIndex = Array.IndexOf(projectDetail.Screenshots, screenshotUrl);
        isLightboxOpen = true;
    }

    private void CloseScreenshotLightbox()
    {
        isLightboxOpen = false;
    }

    private void ShowPreviousScreenshot()
    {
        if (projectDetail?.Screenshots == null || selectedScreenshotIndex <= 0) return;

        selectedScreenshotIndex--;
        selectedScreenshotUrl = projectDetail.Screenshots[selectedScreenshotIndex];
    }

    private void ShowNextScreenshot()
    {
        if (projectDetail?.Screenshots == null || selectedScreenshotIndex >= projectDetail.Screenshots.Length - 1) return;

        selectedScreenshotIndex++;
        selectedScreenshotUrl = projectDetail.Screenshots[selectedScreenshotIndex];
    }

    private string GetDisplayUrl(string? url)
    {
        if (string.IsNullOrEmpty(url) || url == "#")
        {
            return "project-demo.com";
        }

        if (Uri.TryCreate(url, UriKind.Absolute, out var uri))
        {
            return uri.Host;
        }

        return "project-demo.com";
    }
}

<style>
    /* ========================================
       PROJECT DETAIL - MODERN DESIGN SYSTEM
       ======================================== */

    :root {
        --glass-bg: rgba(255, 255, 255, 0.05);
        --glass-border: rgba(255, 255, 255, 0.1);
        --glass-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
    }

    /* Animations */
    @@keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    @@keyframes fadeRight {
        from { opacity: 0; transform: translateX(-20px); }
        to { opacity: 1; transform: translateX(0); }
    }

    @@keyframes fadeLeft {
        from { opacity: 0; transform: translateX(20px); }
        to { opacity: 1; transform: translateX(0); }
    }
    
    @@keyframes fadeDown {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    @@keyframes zoomIn {
        from { opacity: 0; transform: scale(0.95); }
        to { opacity: 1; transform: scale(1); }
    }

    .animate-fade-up { animation: fadeUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards; opacity: 0; }
    .animate-fade-right { animation: fadeRight 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards; opacity: 0; }
    .animate-fade-left { animation: fadeLeft 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards; opacity: 0; }
    .animate-fade-down { animation: fadeDown 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards; opacity: 0; }
    .animate-zoom-in { animation: zoomIn 0.3s ease forwards; }

    /* Loading & Error States */
    .project-loading-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--bg-secondary);
    }

    .loading-container, .error-container {
        text-align: center;
        padding: 3rem;
    }

    .loading-spinner-large {
        position: relative;
        width: 100px;
        height: 100px;
        margin: 0 auto 2rem;
    }

    .spinner-orbit {
        position: absolute;
        inset: 0;
        border: 2px solid transparent;
        border-top-color: var(--primary-color);
        border-radius: 50%;
        animation: orbit 2s linear infinite;
    }

    .spinner-orbit:nth-child(2) {
        inset: 12px;
        border-top-color: var(--secondary-color);
        animation-duration: 3s;
        animation-direction: reverse;
    }

    .spinner-orbit:nth-child(3) {
        inset: 24px;
        border-top-color: var(--accent-color);
        animation-duration: 4s;
    }

    .spinner-core {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: var(--primary-color);
        animation: pulse 2s infinite;
    }

    @@keyframes orbit {
        to { transform: rotate(360deg); }
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); opacity: 1; }
        50% { transform: scale(0.9); opacity: 0.7; }
    }

    .loading-text {
        color: var(--text-tertiary);
        font-size: 1rem;
        letter-spacing: 0.05em;
    }

    /* Project Detail Wrapper */
    .project-detail-wrapper {
        background: var(--bg-secondary);
        min-height: 100vh;
    }

    /* Hero Section */
    .project-hero-section {
        position: relative;
        min-height: 600px;
        display: flex;
        align-items: center;
        overflow: hidden;
        padding: 120px 0 140px;
        background: var(--gradient-hero);
    }

    .hero-background {
        position: absolute;
        inset: 0;
    }

    .hero-image-container {
        position: absolute;
        inset: 0;
    }

    .hero-bg-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.12;
        filter: blur(20px);
        transform: scale(1.1);
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(6, 78, 59, 0.9) 0%, rgba(15, 23, 42, 0.95) 100%);
    }

    .hero-particles {
        position: absolute;
        inset: 0;
        pointer-events: none;
    }

    .particle-dot {
        position: absolute;
        width: 3px;
        height: 3px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        left: var(--x);
        top: var(--y);
        animation: float var(--duration) infinite ease-in-out;
        animation-delay: var(--delay);
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0); opacity: 0.2; }
        50% { transform: translateY(-30px); opacity: 0.6; }
    }

    /* Breadcrumb */
    .breadcrumb-nav {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 8px 16px;
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        border-radius: 50px;
        border: 1px solid var(--glass-border);
        margin-bottom: 2rem;
    }

    .breadcrumb-link {
        display: flex;
        align-items: center;
        gap: 6px;
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        font-size: 0.85rem;
        transition: color 0.2s ease;
    }

    .breadcrumb-link:hover {
        color: #fff;
    }

    .breadcrumb-separator {
        color: rgba(255, 255, 255, 0.3);
        font-size: 0.75rem;
    }

    .breadcrumb-current {
        color: #fff;
        font-size: 0.85rem;
        font-weight: 500;
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Hero Content */
    .hero-meta {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
    }

    .meta-tag {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        backdrop-filter: blur(5px);
    }

    .meta-tag.category {
        background: rgba(16, 185, 129, 0.15);
        color: #6ee7b7;
        border: 1px solid rgba(16, 185, 129, 0.2);
    }

    .meta-tag.date {
        background: rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .meta-tag.status.live {
        background: rgba(34, 197, 94, 0.2);
        color: #86efac;
        border: 1px solid rgba(34, 197, 94, 0.3);
    }

    .meta-tag.status.dev {
        background: rgba(234, 179, 8, 0.2);
        color: #fde047;
        border: 1px solid rgba(234, 179, 8, 0.3);
    }

    .hero-title {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        font-weight: 800;
        color: #fff;
        margin-bottom: 1.25rem;
        line-height: 1.1;
        text-shadow: 0 4px 30px rgba(0,0,0,0.3);
        background: linear-gradient(to right, #fff, #e2e8f0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .hero-description {
        font-size: 1.2rem;
        color: rgba(255, 255, 255, 0.85);
        line-height: 1.7;
        margin-bottom: 2.5rem;
        max-width: 600px;
        font-weight: 300;
    }

    .hero-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .action-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 14px 32px;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .action-btn.primary {
        background: #fff;
        color: var(--primary-dark);
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
    }

    .action-btn.primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        background: #f1f5f9;
    }

    .action-btn.secondary {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        backdrop-filter: blur(5px);
    }

    .action-btn.secondary:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: translateY(-3px);
    }

    /* Project Preview Card (Browser Style) */
    .project-preview-card {
        background: rgba(23, 23, 23, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
