@page "/project/{id:int}"
@using Personal.Models
@using Personal.Services
@inject ProjectService ProjectService
@inject NavigationManager NavigationManager
@inject LocalizationService Localization

<PageTitle>@(projectDetail?.Title ?? Localization["ProjectDetail_Title_Default"])</PageTitle>

@if (projectDetail == null)
{
    <div class="project-loading-wrapper">
        @if (isLoadingProject)
        {
            <div class="loading-container">
                <div class="loading-spinner-large">
                    <div class="spinner-orbit"></div>
                    <div class="spinner-orbit"></div>
                    <div class="spinner-orbit"></div>
                    <div class="spinner-core">
                        <i class="bi bi-code-slash"></i>
                    </div>
                </div>
                <p class="loading-text">@Localization["ProjectDetail_Loading"]</p>
            </div>
        }
        else
        {
            <div class="error-container">
                <div class="error-icon-wrapper">
                    <div class="error-icon-bg"></div>
                    <i class="bi bi-exclamation-triangle error-icon"></i>
                </div>
                <h2 class="error-title">@Localization["ProjectDetail_NotFound_Title"]</h2>
                <p class="error-message">@Localization["ProjectDetail_NotFound_Message"]</p>
                <button class="back-button" @onclick="NavigateToProjectsPage">
                    <i class="bi bi-arrow-left me-2"></i>@Localization["ProjectDetail_BackToProjects"]
                </button>
            </div>
        }
    </div>
}
else
{
    <div class="project-detail-wrapper">
        <!-- Hero Section -->
        <section class="project-hero-section">
            <div class="hero-background">
                <div class="hero-image-container">
                    <img src="@projectDetail.ImageUrl" alt="@projectDetail.Title" class="hero-bg-image">
                    <div class="hero-overlay"></div>
                </div>
                <div class="hero-particles">
                    @for (int i = 0; i < 15; i++)
                    {
                        <div class="particle-dot" style="--delay: @(i * 0.3)s; --x: @(Random.Shared.Next(0, 100))%; --y: @(Random.Shared.Next(0, 100))%;"></div>
                    }
                </div>
            </div>

            <div class="container position-relative" style="z-index: 10;">
                <!-- Breadcrumb -->
                <nav class="breadcrumb-nav">
                    <a href="/" class="breadcrumb-link">
                        <i class="bi bi-house-door"></i>
                        <span>@Localization["ProjectDetail_Breadcrumb_Home"]</span>
                    </a>
                    <i class="bi bi-chevron-right breadcrumb-separator"></i>
                    <a href="/projects" class="breadcrumb-link">
                        <i class="bi bi-folder2-open"></i>
                        <span>@Localization["ProjectDetail_Breadcrumb_Projects"]</span>
                    </a>
                    <i class="bi bi-chevron-right breadcrumb-separator"></i>
                    <span class="breadcrumb-current">@projectDetail.Title</span>
                </nav>

                <div class="hero-content">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <!-- Category & Date -->
                            <div class="hero-meta">
                                @if (!string.IsNullOrEmpty(projectDetail.Category))
                                {
                                    <span class="meta-category">
                                        <i class="bi bi-tag"></i>
                                        @projectDetail.Category
                                    </span>
                                }
                                <span class="meta-date">
                                    <i class="bi bi-calendar3"></i>
                                    @projectDetail.CreatedDate.ToString("MMMM yyyy")
                                </span>
                            </div>

                            <!-- Title -->
                            <h1 class="hero-title">@projectDetail.Title</h1>

                            <!-- Description -->
                            <p class="hero-description">@projectDetail.ShortDescription</p>

                            <!-- Action Buttons -->
                            <div class="hero-actions">
                                @if (!string.IsNullOrEmpty(projectDetail.ProjectUrl))
                                {
                                    <a href="@projectDetail.ProjectUrl" target="_blank" class="action-btn primary pulse-btn">
                                        <i class="bi bi-rocket-takeoff"></i>
                                        <span>@Localization["ProjectDetail_Button_LiveDemo"]</span>
                                    </a>
                                }
                                @if (!string.IsNullOrEmpty(projectDetail.GitHubUrl))
                                {
                                    <a href="@projectDetail.GitHubUrl" target="_blank" class="action-btn secondary">
                                        <i class="bi bi-github"></i>
                                        <span>@Localization["ProjectDetail_Button_GitHubRepo"]</span>
                                    </a>
                                }
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <!-- Quick Stats Card -->
                            <div class="quick-stats-card">
                                <div class="stat-item">
                                    <div class="stat-icon">
                                        <i class="bi bi-stack"></i>
                                    </div>
                                    <div class="stat-content">
                                        <span class="stat-value">@projectDetail.Technologies.Length</span>
                                        <span class="stat-label">@Localization["ProjectDetail_Stat_Technologies"]</span>
                                    </div>
                                </div>
                                @if (projectDetail.Features?.Any() == true)
                                {
                                    <div class="stat-item">
                                        <div class="stat-icon">
                                            <i class="bi bi-star"></i>
                                        </div>
                                        <div class="stat-content">
                                            <span class="stat-value">@projectDetail.Features.Length</span>
                                            <span class="stat-label">@Localization["ProjectDetail_Stat_Features"]</span>
                                        </div>
                                    </div>
                                }
                                <div class="stat-item">
                                    <div class="stat-icon">
                                        <i class="bi bi-check-circle"></i>
                                    </div>
                                    <div class="stat-content">
                                        <span class="stat-value status">
                                            @if (!string.IsNullOrEmpty(projectDetail.ProjectUrl))
                                            {
                                                <span class="status-live">@Localization["ProjectDetail_Status_Live"]</span>
                                            }
                                            else
                                            {
                                                <span class="status-dev">@Localization["ProjectDetail_Status_Development"]</span>
                                            }
                                        </span>
                                        <span class="stat-label">@Localization["ProjectDetail_Stat_Status"]</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Wave Separator -->
            <div class="hero-wave">
                <svg viewBox="0 0 1440 120" preserveAspectRatio="none">
                    <path d="M0,64L60,58.7C120,53,240,43,360,48C480,53,600,75,720,80C840,85,960,75,1080,64C1200,53,1320,43,1380,37.3L1440,32L1440,120L1380,120C1320,120,1200,120,1080,120C960,120,840,120,720,120C600,120,480,120,360,120C240,120,120,120,60,120L0,120Z"></path>
                </svg>
            </div>
        </section>

        <!-- Main Content -->
        <section class="project-content-section">
            <div class="container">
                <div class="row g-4">
                    <!-- Main Content Column -->
                    <div class="col-lg-8">
                        <!-- Project Description -->
                        <article class="content-card">
                            <div class="card-header-custom">
                                <div class="header-icon">
                                    <i class="bi bi-file-earmark-text"></i>
                                </div>
                                <h2 class="header-title">@Localization["ProjectDetail_Section_Details"]</h2>
                            </div>
                            <div class="card-body-custom">
                                <div class="markdown-content">
                                    <markdown>@projectDetail.FullDescription</markdown>
                                </div>
                            </div>
                        </article>

                        <!-- Features Section -->
                        @if (projectDetail.Features?.Any() == true)
                        {
                            <article class="content-card">
                                <div class="card-header-custom">
                                    <div class="header-icon features">
                                        <i class="bi bi-lightning-charge"></i>
                                    </div>
                                    <h2 class="header-title">@Localization["ProjectDetail_Section_Features"]</h2>
                                </div>
                                <div class="card-body-custom">
                                    <div class="features-grid">
                                        @foreach (var feature in projectDetail.Features)
                                        {
                                            <div class="feature-card">
                                                <div class="feature-icon">
                                                    <i class="bi bi-check2-circle"></i>
                                                </div>
                                                <span class="feature-text">@feature</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </article>
                        }

                        <!-- Challenges & Solutions -->
                        @if (!string.IsNullOrEmpty(projectDetail.Challenges) || !string.IsNullOrEmpty(projectDetail.Solutions))
                        {
                            <article class="content-card">
                                <div class="card-header-custom">
                                    <div class="header-icon challenges">
                                        <i class="bi bi-puzzle"></i>
                                    </div>
                                    <h2 class="header-title">@Localization["ProjectDetail_Section_ChallengesSolutions"]</h2>
                                </div>
                                <div class="card-body-custom">
                                    @if (!string.IsNullOrEmpty(projectDetail.Challenges))
                                    {
                                        <div class="challenge-block">
                                            <div class="block-header challenges">
                                                <i class="bi bi-exclamation-diamond"></i>
                                                <h3>@Localization["ProjectDetail_Section_Challenges"]</h3>
                                            </div>
                                            <div class="block-content">
                                                <markdown>@projectDetail.Challenges</markdown>
                                            </div>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(projectDetail.Solutions))
                                    {
                                        <div class="solution-block">
                                            <div class="block-header solutions">
                                                <i class="bi bi-lightbulb"></i>
                                                <h3>@Localization["ProjectDetail_Section_Solutions"]</h3>
                                            </div>
                                            <div class="block-content">
                                                <markdown>@projectDetail.Solutions</markdown>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </article>
                        }
                    </div>

                    <!-- Sidebar -->
                    <div class="col-lg-4">
                        <!-- Technology Stack -->
                        <aside class="sidebar-card">
                            <div class="sidebar-header">
                                <div class="header-icon tech">
                                    <i class="bi bi-layers"></i>
                                </div>
                                <h3>@Localization["ProjectDetail_Section_TechStack"]</h3>
                            </div>
                            <div class="sidebar-body">
                                <div class="tech-list">
                                    @foreach (var tech in projectDetail.Technologies)
                                    {
                                        <div class="tech-item">
                                            <div class="tech-bullet"></div>
                                            <span class="tech-name">@tech</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </aside>

                        <!-- Screenshots Gallery -->
                        @if (projectDetail.Screenshots?.Any() == true)
                        {
                            <aside class="sidebar-card">
                                <div class="sidebar-header">
                                    <div class="header-icon gallery">
                                        <i class="bi bi-images"></i>
                                    </div>
                                    <h3>@Localization["ProjectDetail_Section_Screenshots"]</h3>
                                </div>
                                <div class="sidebar-body">
                                    <div class="gallery-grid">
                                        @foreach (var screenshot in projectDetail.Screenshots)
                                        {
                                            <div class="gallery-item" @onclick="() => OpenScreenshotLightbox(screenshot)">
                                                <img src="@screenshot" alt="Screenshot" loading="lazy">
                                                <div class="gallery-overlay">
                                                    <i class="bi bi-zoom-in"></i>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </aside>
                        }

                        <!-- Project Info -->
                        <aside class="sidebar-card">
                            <div class="sidebar-header">
                                <div class="header-icon info">
                                    <i class="bi bi-info-circle"></i>
                                </div>
                                <h3>@Localization["ProjectDetail_Section_Info"]</h3>
                            </div>
                            <div class="sidebar-body">
                                <div class="info-list">
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <i class="bi bi-calendar-event"></i>
                                        </div>
                                        <div class="info-content">
                                            <span class="info-label">@Localization["ProjectDetail_Info_CreatedDate"]</span>
                                            <span class="info-value">@projectDetail.CreatedDate.ToString("dd MMMM yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <i class="bi bi-bookmark"></i>
                                        </div>
                                        <div class="info-content">
                                            <span class="info-label">@Localization["ProjectDetail_Info_Category"]</span>
                                            <span class="info-value">@projectDetail.Category</span>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <i class="bi bi-activity"></i>
                                        </div>
                                        <div class="info-content">
                                            <span class="info-label">@Localization["ProjectDetail_Info_Status"]</span>
                                            <span class="info-value">
                                                @if (!string.IsNullOrEmpty(projectDetail.ProjectUrl))
                                                {
                                                    <span class="status-badge live">
                                                        <span class="status-dot"></span>
                                                        @Localization["ProjectDetail_Status_Live"]
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="status-badge dev">
                                                        <span class="status-dot"></span>
                                                        @Localization["ProjectDetail_Status_Development"]
                                                    </span>
                                                }
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </aside>

                        <!-- Back to Projects -->
                        <div class="back-to-projects">
                            <a href="/projects" class="back-link">
                                <i class="bi bi-arrow-left"></i>
                                <span>@Localization["ProjectDetail_BackToProjects"]</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Lightbox Modal -->
    @if (isLightboxOpen)
    {
        <div class="lightbox-modal" @onclick="CloseScreenshotLightbox">
            <div class="lightbox-content" @onclick:stopPropagation>
                <button class="lightbox-close" @onclick="CloseScreenshotLightbox">
                    <i class="bi bi-x-lg"></i>
                </button>
                <div class="lightbox-image-container">
                    <img src="@selectedScreenshotUrl" alt="Screenshot" class="lightbox-image">
                </div>
                <div class="lightbox-controls">
                    <button class="lightbox-nav prev" @onclick="ShowPreviousScreenshot" disabled="@(selectedScreenshotIndex <= 0)">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <span class="lightbox-counter">@(selectedScreenshotIndex + 1) / @projectDetail.Screenshots.Length</span>
                    <button class="lightbox-nav next" @onclick="ShowNextScreenshot" disabled="@(selectedScreenshotIndex >= projectDetail.Screenshots.Length - 1)">
                        <i class="bi bi-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    }
}

@code {
    [Parameter] public int Id { get; set; }

    private Personal.Models.ProjectDetail? projectDetail;
    private bool isLoadingProject = true;
    private bool isLightboxOpen = false;
    private string? selectedScreenshotUrl;
    private int selectedScreenshotIndex = 0;

    protected override async Task OnParametersSetAsync()
    {
        isLoadingProject = true;
        projectDetail = await ProjectService.GetProjectDetailAsync(Id);
        isLoadingProject = false;
    }

    private void NavigateToProjectsPage()
    {
        NavigationManager.NavigateTo("/projects");
    }

    private void OpenScreenshotLightbox(string screenshotUrl)
    {
        if (projectDetail?.Screenshots == null) return;

        selectedScreenshotUrl = screenshotUrl;
        selectedScreenshotIndex = Array.IndexOf(projectDetail.Screenshots, screenshotUrl);
        isLightboxOpen = true;
    }

    private void CloseScreenshotLightbox()
    {
        isLightboxOpen = false;
    }

    private void ShowPreviousScreenshot()
    {
        if (projectDetail?.Screenshots == null || selectedScreenshotIndex <= 0) return;

        selectedScreenshotIndex--;
        selectedScreenshotUrl = projectDetail.Screenshots[selectedScreenshotIndex];
    }

    private void ShowNextScreenshot()
    {
        if (projectDetail?.Screenshots == null || selectedScreenshotIndex >= projectDetail.Screenshots.Length - 1) return;

        selectedScreenshotIndex++;
        selectedScreenshotUrl = projectDetail.Screenshots[selectedScreenshotIndex];
    }
}

<style>
    /* ========================================
       PROJECT DETAIL - MODERN DESIGN SYSTEM
       ======================================== */

    /* Loading & Error States */
    .project-loading-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(180deg, #0a0f1e 0%, #0d1424 100%);
    }

    .loading-container, .error-container {
        text-align: center;
        padding: 3rem;
    }

    .loading-spinner-large {
        position: relative;
        width: 120px;
        height: 120px;
        margin: 0 auto 2rem;
    }

    .spinner-orbit {
        position: absolute;
        inset: 0;
        border: 2px solid transparent;
        border-top-color: #6366f1;
        border-radius: 50%;
        animation: orbit 2s linear infinite;
    }

    .spinner-orbit:nth-child(2) {
        inset: 15px;
        border-top-color: #8b5cf6;
        animation-duration: 3s;
        animation-direction: reverse;
    }

    .spinner-orbit:nth-child(3) {
        inset: 30px;
        border-top-color: #06b6d4;
        animation-duration: 4s;
    }

    .spinner-core {
        position: absolute;
        inset: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #a5b4fc;
    }

    @@keyframes orbit {
        to { transform: rotate(360deg); }
    }

    .loading-text {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1rem;
    }

    /* Error State */
    .error-icon-wrapper {
        position: relative;
        width: 100px;
        height: 100px;
        margin: 0 auto 2rem;
    }

    .error-icon-bg {
        position: absolute;
