    }

    /* Hero Section */
    .project-hero-section {
        position: relative;
        min-height: 70vh;
        display: flex;
        align-items: center;
        overflow: hidden;
        padding: 6rem 0 8rem;
        background: linear-gradient(135deg, #4338ca 0%, #6366f1 50%, #8b5cf6 100%);
    }

    .hero-background {
        position: absolute;
        inset: 0;
    }

    .hero-image-container {
        position: absolute;
