@page "/projects"
@using Personal.Models
@using Personal.Services
@inject ProjectService ProjectService
@inject LocalizationService L

<PageTitle>Projeler - Kadir Beşkardeş Portfolio</PageTitle>
<HeadContent>
    <meta name="description" content="Kadir Beşkardeş'in geliştirdiği C#, .NET, Python projeleri. Görme engelli uygulaması, e-ticaret platformu, chat uygulaması ve daha fazla proje.">
    <meta property="og:title" content="Projeler - Kadir Beşkardeş Software Portfolio">
    <meta property="og:description" content="Full Stack Developer olarak geliştirdiğim web ve mobil uygulamalar. C#, .NET Core, Python ile yapılmış projeler.">
    <meta property="og:url" content="https://kadirbeskardes.github.io/projects">
    <meta property="og:type" content="website">
    <meta name="twitter:title" content="Yazılım Projeleri - Kadir Beşkardeş">
    <meta name="twitter:description" content="C#, .NET, Python ile geliştirdiğim projelerimi keşfedin.">
    <link rel="canonical" href="https://kadirbeskardes.github.io/projects">
</HeadContent>

<div class="projects-page">
    <!-- Hero Section -->
    <section class="projects-hero bg-dark text-white py-5">
        <div class="container py-4">
            <div class="row align-items-center">
                <div class="col-lg-8 mx-auto text-center">
                    <h1 class="display-4 fw-bold mb-3">@L["Projects_Title"]</h1>
                    <p class="lead mb-4">@L["Projects_Subtitle"]</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="#projects-grid" class="btn btn-primary btn-lg px-4 rounded-pill">
                            <i class="bi bi-grid me-2"></i>@L["Projects_Explore"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Projects Grid -->
    <section id="projects-grid" class="py-5">
        <div class="container py-4">
            @if (projects == null)
            {
                <div class="text-center py-5">
                    <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3 fs-5">@L["Projects_Loading"]</p>
                </div>
            }
            else if (!projects.Any())
            {
                <div class="alert alert-warning text-center py-4">
                    <i class="bi bi-exclamation-circle fs-3"></i>
                    <h4 class="alert-heading mt-3">@L["Projects_NoProjects"]</h4>
                    <p>@L["Projects_NoProjectsDescription"]</p>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var project in projects)
                    {
                        <div class="col-xl-4 col-md-6">
                            <div class="project-card card h-100 shadow-lg border-0 overflow-hidden">
                                <div class="position-relative image-wrapper">
                                    <img src="@project.ImageUrl" class="card-img-top project-image" alt="@project.Title">
                                    <div class="project-year-badge">
                                        @project.CreatedDate.ToString("yyyy")
                                    </div>
                                    <div class="project-hover-overlay">
                                        <a href="@($"project/{project.Id}")" class="btn btn-outline-light btn-lg rounded-pill">
                                            <i class="bi bi-eye-fill me-2"></i>@L["Projects_ViewDetails"]
                                        </a>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h3 class="card-title h5 fw-bold">@project.Title</h3>
                                        <div class="project-links">
                                            @if (!string.IsNullOrEmpty(project.GitHubUrl))
                                            {
                                                <a href="@project.GitHubUrl" target="_blank" class="text-dark mx-1" title="GitHub Repo">
                                                    <i class="bi bi-github fs-5"></i>
                                                </a>
                                            }
                                        </div>
                                    </div>
                                    <p class="card-text text-muted mb-4">@project.ShortDescription</p>
                                    <div class="project-technologies">
                                        @foreach (var tech in project.Technologies)
                                        {
                                            <span class="tech-badge">@tech</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </section>
</div>

<style>
    .projects-hero {
        background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
        position: relative;
        overflow: hidden;
    }

    .project-card {
        transition: all 0.3s ease;
        border-radius: 12px;
    }

        .project-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

    .image-wrapper {
        aspect-ratio: 16 / 9;
        overflow: hidden;
        position: relative;
    }

    .project-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        display: block;
        transition: transform 0.3s ease;
    }

    .project-card:hover .project-image {
        transform: scale(1.05);
    }

    .project-year-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .project-hover-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: all 0.3s ease;
    }

    .project-card:hover .project-hover-overlay {
        opacity: 1;
    }

    .project-technologies {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-top: 1rem;
    }

    .tech-badge {
        background-color: #f1f5f9;
        color: #334155;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    @@media (max-width: 768px) {
        .projects-hero {
            padding-top: 4rem;
            padding-bottom: 4rem;
        }

        .image-wrapper {
            aspect-ratio: 16 / 10;
        }
    }
</style>

