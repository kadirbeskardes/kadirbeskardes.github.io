    private List<Personal.Models.ProjectDetail>? projectsList;
    private List<Personal.Models.ProjectDetail>? filteredProjects;
    private List<string>? categories;
    private string selectedCategory = "All";

    protected override async Task OnInitializedAsync()
    {
        projectsList = await ProjectService.GetProjectListingsAsync();
        if (projectsList != null)
        {
            categories = projectsList
                .Where(p => !string.IsNullOrEmpty(p.Category))
                .Select(p => p.Category)
                .Distinct()
                .OrderBy(c => c)
                .ToList();
            
            FilterProjects("All");
        }
    }

    private void FilterProjects(string category)
    {
        selectedCategory = category;
        if (category == "All")
        {
            filteredProjects = projectsList;
        }
        else
        {
            filteredProjects = projectsList?.Where(p => p.Category == category).ToList();
        }
    }
