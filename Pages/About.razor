<style>
    @@keyframes float {
        0% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-15px);
        }

        100% {
            transform: translateY(0px);
        }
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0) translateX(-50%);
        }

        40% {
            transform: translateY(-20px) translateX(-50%);
        }

        60% {
            transform: translateY(-10px) translateX(-50%);
        }
    }

    /* Ã–zel Stiller */
    .about-hero {
        background: var(--gradient-hero);
        margin-bottom: 3rem;
        position: relative;
    }

    .profile-image-container {
        width: 180px;
        height: 180px;
        margin: 0 auto;
    }

        .profile-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .hero-image-container {
        position: relative;
    }

        .hero-image-container img {
            width: 100%;
            max-width: 350px;
            height: auto;
        }

    .tech-badge {
        position: absolute;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        animation: float 6s ease-in-out infinite;
    }

    .dotnet-badge {
        background: linear-gradient(135deg, #1d4ed8 0%, #3b82f6 100%);
        top: -20px;
        left: -20px;
        animation-delay: 0s;
    }

    .python-badge {
        background: linear-gradient(135deg, #3776ab 0%, #ffd43b 100%);
        top: 50%;
        right: -20px;
        transform: translateY(-50%);
        animation-delay: 2s;
    }

    .social-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        color: white;
        font-size: 1.2rem;
        transition: all 0.3s ease;
    }

    .bg-github {
        background-color: #333;
    }

    .bg-linkedin {
        background-color: #0a66c2;
    }

    .bg-twitter {
        background-color: #000;
    }

    .bg-instagram {
        background: linear-gradient(45deg, #405de6, #5851db, #833ab4, #c13584, #e1306c, #fd1d1d);
    }

    .social-icon:hover {
        transform: translateY(-3px) scale(1.1);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .skills-section, .references-section, .certificates-section {
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-color);
    }

    .bg-primary-light {
        background-color: rgba(37, 99, 235, 0.08);
    }

    .icon-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    /* Timeline Center (New) */
    .timeline-center {
        position: relative;
        padding: 0;
    }

    .timeline-center::before {
        content: '';
        position: absolute;
        top: 0;
        bottom: 0;
        left: 50%;
        width: 2px;
        background: linear-gradient(180deg, var(--primary-color) 0%, rgba(37, 99, 235, 0.2) 100%);
        transform: translateX(-50%);
    }

    .timeline-row {
        position: relative;
        margin-bottom: 3rem;
    }

    .timeline-row:last-child {
        margin-bottom: 0;
    }

    .timeline-time {
        position: absolute;
        left: 50%;
        top: 0;
        transform: translateX(-50%);
        background: var(--bg-card);
        color: var(--primary-color);
        padding: 5px 15px;
        border-radius: 20px;
        border: 1px solid var(--border-color);
        font-size: 0.85rem;
        font-weight: 600;
        z-index: 2;
    }

    .timeline-content {
        position: relative;
        width: 45%;
        padding: 1.5rem;
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 15px;
        margin-left: auto; /* Default to right */
    }

    /* Left side content for even children */
    .timeline-row:nth-child(even) .timeline-content {
        margin-left: 0;
        margin-right: auto;
    }

    .icon-attachment {
        position: absolute;
        top: 20px;
        font-size: 1.5rem;
        color: var(--primary-color);
        background: var(--bg-card);
        border-radius: 50%;
        padding: 10px;
        box-shadow: var(--shadow-md);
    }
    
    .timeline-row:nth-child(odd) .icon-attachment {
        left: -40px; /* Adjust based on positioning */
        display: none; /* Simplify for now, time dot is enough */
    }

    /* Mobile Responsive Timeline */
    @@media (max-width: 768px) {
        .timeline-center::before {
            left: 20px;
        }

        .timeline-time {
            position: relative;
            left: 0;
            transform: none;
            display: inline-block;
            margin-bottom: 10px;
            margin-left: 50px;
        }

        .timeline-content {
            width: calc(100% - 50px);
            margin-left: 50px !important;
        }
    }

    /* Tech Cards */
    .tech-card {
        transition: all 0.3s ease;
        background-color: var(--bg-card);
        border: 1px solid var(--border-color);
    }

        .tech-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }

    /* Hero Scroll Indicator */
    .hero-scroll-indicator {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        animation: bounce 2s infinite;
    }

    .certificate-item {
        transition: all 0.3s ease;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

        .certificate-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            border-color: rgba(59, 130, 246, 0.2);
        }

        .certificate-item a {
            color: #1a365d;
            transition: color 0.2s ease;
        }

            .certificate-item a:hover {
                color: #3b82f6;
                text-decoration: underline !important;
            }
    
    /* Mobile Responsive Styles */
    @@media (max-width: 768px) {
        /* About Hero Mobile */
        .about-hero {
            text-align: center;
            margin-bottom: 2rem;
            padding: 2rem 0 !important;
        }
        
        .about-hero .container {
            padding: 1rem !important;
        }
        
        .about-hero .row {
            padding: 1rem 0 !important;
        }
        
        .about-hero-title {
            font-size: 1.75rem !important;
            margin-bottom: 1rem !important;
        }
        
        .about-hero-subtitle {
            font-size: 1rem !important;
            margin-bottom: 0.75rem !important;
