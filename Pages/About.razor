@page "/about"
@using Personal.Services
@inject LocalizationService L

<PageTitle>@L["About_Title"] - @L["About_Name"]</PageTitle>
<HeadContent>
    <meta name="description" content="@L["About_ProfessionalSummaryText1"]">
    <meta property="og:title" content="@L["About_Title"] - @L["About_Name"]">
    <meta property="og:description" content="@L["About_Subtitle"]">
    <meta property="og:url" content="https://kadirbeskardes.github.io/about">
    <meta property="og:type" content="profile">
    <meta name="twitter:title" content="@L["About_Title"] - @L["About_Name"]">
    <meta name="twitter:description" content="@L["About_Subtitle"]">
    <link rel="canonical" href="https://kadirbeskardes.github.io/about">
</HeadContent>

<!-- Modern Hero Section with Particles -->
<section class="about-hero bg-dark text-white position-relative overflow-hidden">
    <div id="particles-js"></div>
    <div class="container position-relative py-5" style="z-index: 2;">
        <div class="row align-items-center min-vh-60 py-5">
            <div class="col-lg-7">
                <div class="badge bg-primary bg-opacity-10 text-primary mb-3 px-3 py-2 rounded-pill hero-badge-mobile">@L["About_Badge"]</div>
                <h1 class="display-3 fw-bold mb-4 animate__animated animate__fadeInDown about-hero-title">@L["About_Name"]</h1>
                <p class="lead mb-4 animate__animated animate__fadeIn animate__delay-1s about-hero-subtitle">@L["About_Subtitle"]</p>
                <p class="mb-5 animate__animated animate__fadeIn animate__delay-1s about-hero-description">
                    @L["About_Description"]
                </p>
                <div class="d-flex flex-wrap gap-3 animate__animated animate__fadeIn animate__delay-2s about-hero-buttons">
                    <a href="contact" class="btn btn-primary btn-lg px-4 rounded-pill about-hero-btn">
                        <i class="bi bi-envelope me-2"></i>@L["About_ContactButton"]
                    </a>
                    <a href="files/CV Kadir Beskardes.pdf" download class="btn btn-outline-light btn-lg px-4 rounded-pill about-hero-btn">
                        <i class="bi bi-download me-2"></i>@L["About_DownloadCV"]
                    </a>
                </div>
            </div>
            <div class="col-lg-5 d-none d-lg-block">
                <div class="hero-image-container position-relative">
                    <img src="img/pp.jpg" alt="@L["About_Name"]" class="img-fluid rounded-4 shadow-lg border border-4 border-white">
                    <div class="tech-badge dotnet-badge">
                        <i class="fab fa-microsoft"></i>
                    </div>
                    <div class="tech-badge python-badge">
                        <i class="fab fa-python"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-scroll-indicator">
        <a href="#main-content" class="text-white"><i class="bi bi-chevron-down fs-4"></i></a>
    </div>
</section>

