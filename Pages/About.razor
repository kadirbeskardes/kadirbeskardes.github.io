    /* Timeline Stilleri */
    .timeline {
        position: relative;
    }

    .timeline-item {
        position: relative;
        padding-left: 30px;
    }

    .timeline-period {
        position: absolute;
        left: -30px;
        top: 0;
        width: 60px;
        padding: 5px;
        border-radius: 20px;
        text-align: center;
        font-size: 0.75rem;
        font-weight: bold;
        z-index: 2;
    }

    .timeline-content {
        position: relative;
        transition: all 0.3s ease;
        border-left: 2px solid #3b82f6;
        padding-left: 20px;
        margin-left: 10px;
    }

        .timeline-content:before {
            content: '';
            position: absolute;
            left: -7px;
            top: 15px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: #3b82f6;
            border: 2px solid white;
            z-index: 2;
