@page "/admin"
@using Personal.Services
@using Personal.Models
@inject AdminService AdminService
@inject NavigationManager Navigation

<PageTitle>Admin Girişi</PageTitle>

<div class="admin-login-wrapper">
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-icon">
                    <i class="bi bi-shield-lock"></i>
                </div>
                <h1>Admin Paneli</h1>
                <p>Devam etmek için giriş yapın</p>
            </div>

            @if (isLockedOut)
            {
                <div class="lockout-message">
                    <i class="bi bi-lock-fill me-2"></i>
                    <div>
                        <strong>Hesap Kilitlendi</strong>
                        <p>@lockoutMessage</p>
                    </div>
                </div>
            }
            else
            {
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="error-message">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        @errorMessage
                    </div>
                }

                @if (remainingAttempts > 0 && remainingAttempts < AdminSettings.MaxLoginAttempts)
                {
                    <div class="warning-message">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        Kalan deneme hakkı: @remainingAttempts
                    </div>
                }

                <div class="login-form">
                    <div class="form-group">
                        <label for="password">
                            <i class="bi bi-key me-2"></i>Şifre
                        </label>
                        <input type="password" 
                               id="password" 
                               @bind="password" 
                               @onkeypress="HandleKeyPress"
                               placeholder="Şifrenizi girin"
                               class="form-input" 
                               disabled="@isLoading" />
                    </div>

                    <button class="login-btn" @onclick="HandleLogin" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner"></span>
                            <span>Giriş yapılıyor...</span>
                        }
                        else
                        {
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            <span>Giriş Yap</span>
                        }
                    </button>
                </div>
            }

            <div class="login-footer">
                <a href="/" class="back-link">
                    <i class="bi bi-arrow-left me-2"></i>Ana Sayfaya Dön
                </a>
            </div>

            <div class="security-info">
                <i class="bi bi-shield-check me-1"></i>
                <span>Güvenli bağlantı</span>
            </div>
        </div>
    </div>
</div>

<style>
    .admin-login-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--dark-color);
        padding: 2rem;
    }

    .login-container {
        width: 100%;
        max-width: 420px;
    }

    .login-card {
        background: #ffffff;
        border: 1px solid rgba(0, 0, 0, 0.05);
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
    }

    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .login-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #fff;
        box-shadow: 0 10px 30px rgba(16, 185, 129, 0.3);
    }

    .login-header h1 {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--light-color);
        margin-bottom: 0.5rem;
    }

    .login-header p {
        color: var(--light-tertiary);
        font-size: 0.9rem;
    }

    .error-message {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #ef4444;
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
    }

    .warning-message {
        background: rgba(245, 158, 11, 0.1);
        border: 1px solid rgba(245, 158, 11, 0.3);
        color: #f59e0b;
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
    }

    .lockout-message {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #ef4444;
        padding: 1.5rem;
        border-radius: 10px;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }

    .lockout-message i {
        font-size: 1.5rem;
        margin-top: 0.25rem;
    }

    .lockout-message strong {
        display: block;
        margin-bottom: 0.25rem;
        color: #ef4444;
    }

    .lockout-message p {
        margin: 0;
        font-size: 0.9rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        color: var(--light-secondary);
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .form-input {
        width: 100%;
        padding: 1rem 1.25rem;
        background: #f8fafc;
        border: 1px solid rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        color: var(--light-color);
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: #10b981;
        box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
        background: #ffffff;
    }

    .form-input:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .form-input::placeholder {
        color: var(--light-tertiary);
        opacity: 0.7;
    }

    .login-btn {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border: none;
        border-radius: 10px;
        color: #fff;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

    .login-btn:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(16, 185, 129, 0.3);
    }

    .login-btn:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    .spinner {
        width: 20px;
        height: 20px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-top-color: #fff;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    .login-footer {
        text-align: center;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .back-link {
        color: var(--light-tertiary);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

    .back-link:hover {
        color: #10b981;
    }

    .security-info {
        text-align: center;
        margin-top: 1.5rem;
        color: rgba(34, 197, 94, 0.7);
        font-size: 0.8rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.25rem;
    }
</style>

@code {
    private string password = "";
    private string errorMessage = "";
    private string lockoutMessage = "";
    private bool isLoading = false;
    private bool isLockedOut = false;
    private int remainingAttempts = AdminSettings.MaxLoginAttempts;

    protected override async Task OnInitializedAsync()
    {
        if (await AdminService.IsAuthenticatedAsync())
        {
            Navigation.NavigateTo("/admin/dashboard");
            return;
        }

        await CheckLockoutStatus();
    }

    private async Task CheckLockoutStatus()
    {
        var attempts = await AdminService.GetLoginAttemptsAsync();
        
        if (attempts.IsLockedOut)
        {
            isLockedOut = true;
            var remainingMinutes = (int)Math.Ceiling((attempts.LockoutUntil!.Value - DateTime.UtcNow).TotalMinutes);
            lockoutMessage = $"Çok fazla başarısız deneme. {remainingMinutes} dakika sonra tekrar deneyin.";
        }
        else
        {
            isLockedOut = false;
            remainingAttempts = attempts.RemainingAttempts;
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !isLockedOut)
        {
            await HandleLogin();
        }
    }

    private async Task HandleLogin()
    {
        if (isLockedOut) return;

        errorMessage = "";
        isLoading = true;

        try
        {
            if (string.IsNullOrWhiteSpace(password))
            {
                errorMessage = "Lütfen şifrenizi girin.";
                return;
            }

            var (success, message) = await AdminService.LoginAsync(password);
            
            if (success)
            {
                Navigation.NavigateTo("/admin/dashboard");
            }
            else
            {
                errorMessage = message;
                password = "";
                await CheckLockoutStatus();
            }
        }
        finally
        {
            isLoading = false;
        }
    }
}
